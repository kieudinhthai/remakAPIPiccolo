<div class="container sliderProduct">
    <div class="d-flex justify-content-between align-items-center headersliderProduct" >
        <h3>Same products</h3>
        <a href="#">All products </a>
  
    </div>
    <hr/>
    <div class="owl-carousel owl-theme listItem">
    
     {{#each data.same_products}}     
         <div class="item" href="#">
            <div class="img-hover-zoom" >
               <img src="/../img/{{this.image}}" alt="This zooms-in really well and smooth">
            </div>
            <div class="content text-center">
               <span class="name">{{this.name}}</span>
               <p>Price : {{this.price}} VND</p>
               <button class="button"><span><a style="color: white; text-decoration: none;" href="{{this.request.url}}">Learn more</a> </span></button>
            </div>
         </div>
     {{/each}}
   </div>
   
</div>
<div class="container productDetail">
  <div class="d-flex justify-content-between align-items-center headerproductDetail mb-3">
    <h3><a href="/">Home</a>
      <i class="fas fa-chevron-right"></i>
      <a href="">{{data.product.category.ct_name}}</a>
      <i class="fas fa-chevron-right"></i>
      <a href="">{{data.product.name}}</a>
    </h3>
  </div>
  <div class="row">
    <div class="col-6 d-flex justify-content-center align-items-center img-hover-zoom" width="80%">
      <img src="/../img/{{data.product.image}}" width="70%" height="auto">
    </div>

    <div class="col-md-6 align-items-center detail p-5">

      <h5>{{data.product.name}}</h5>
      <p class="mb-2 text-muted text-uppercase small">{{data.product.category.ct_name}}</p>

      <p><span class="mr-1"><strong>{{data.product.price}} VND</strong></span></p>
      <h4>Description</h4>
      <p class="pt-1">{{data.product.description}}</p>

      <hr>

      <div class="text-center"><button type="button" class="button" data-toggle="modal"
          data-target="#myModal"><span>Feedback</span></button></div>

    </div>
  </div>
</div>
<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/products/comment/{{data.product._id}}" method="post">
        <!-- Modal Header -->
        <div class="modal-header text-center">
          <h4 class="modal-title ">Your Feedback</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body" style="height:100%, width=100%">
          <div class="form-group">
            <label for="">Your name</label>
            <input type="text" class="form-control" name="name" id="name" aria-describedby="helpId"
              placeholder="What's your name?">
          </div>
          <div class="form-group">
            <label for="">Email</label>
            <input type="text" class="form-control" name="email" id="email" aria-describedby="helpId"
              placeholder="What's your email?">
          </div>


          <div class="form-group">
            <label for="">Your feedback?</label>
            <textarea type="text" class="form-control" name="comment" id="comment" aria-describedby="helpId"
              placeholder="Bạn hãy nhận xét thức uống này nhé <3"></textarea>
          </div>
          <div>Rate it!</div>
          <div class="form-group">
          <label for="">  </label>
         <div class="rate"> 
          <input type="radio" id="star5" name="rate" value="5" />
          <label for="star5" title=":)))))">5 stars</label>
          <input type="radio" id="star4" name="rate" value="4" />
          <label for="star4" title=":))))">4 stars</label>
          <input type="radio" id="star3" name="rate" value="3" />
          <label for="star3" title=":)))">3 stars</label>
          <input type="radio" id="star2" name="rate" value="2" />
          <label for="star2" title=":))">2 stars</label>
          <input type="radio" id="star1" name="rate" value="1" />
          <label for="star1" title=":)">1 star</label>
        </div>
        
         </div>
 </div>


    <!-- Modal footer -->
    <div class="modal-footer">
      <button type="button" class="btn btn-danger" data-dismiss="modal"><span>Close</span></button>
      <button type="submit" name="product" value="{{data.product._id}}" class="button"><span>Send feedback</span></button>


    </div>
    </form>
  </div>
</div>
</div>


<!--Section: Block Content-->

<style>

.rate {
    float: left;
    height: 46px;
    padding: 0 10px;
}
.rate:not(:checked) > input {
    position:absolute;
    top:-9999px;
}
.rate:not(:checked) > label {
    float:right;
    width:1em;
    overflow:hidden;
    white-space:nowrap;
    cursor:pointer;
    font-size:30px;
    color:#ccc;
}
.rate:not(:checked) > label:before {
    content: '★ ';
}
.rate > input:checked ~ label {
    color: #ffc700;    
}
.rate:not(:checked) > label:hover,
.rate:not(:checked) > label:hover ~ label {
    color: #deb217;  
}
.rate > input:checked + label:hover,
.rate > input:checked + label:hover ~ label,
.rate > input:checked ~ label:hover,
.rate > input:checked ~ label:hover ~ label,
.rate > label:hover ~ input:checked ~ label {
    color: #c59b08;
}

/* Modified from: https://github.com/mukulkant/Star-rating-using-pure-css */
</style>
{{>sidebarAdmin}}
<div class="page">
    {{>headerAdmin}}


    <section id="tabs" class="m-5">
        <div class="container">
            <h6 class="section-title h1">Recycle Bin</h6>
            <div class="row">
                <div class="col-12 ">
                    <nav>
                        <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home"
                                role="tab" aria-controls="nav-home" aria-selected="true">Products</a>
                            <a class="nav-item nav-link " id="nav-cateogry-tab" data-toggle="tab" href="#nav-category"
                                role="tab" aria-controls="nav-category" aria-selected="false">Category</a>
                            <a class="nav-item nav-link " id="nav-blog-tab" data-toggle="tab" href="#nav-blog"
                                role="tab" aria-controls="nav-blog" aria-selected="false">Blog</a>
                        </div>
                    </nav>
                    <div class="row">
                        <div class="col-1"></div>
                        <div class="col-10">
                            <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                                <div class="tab-pane fade show active " id="nav-home" role="tabpanel"
                                    aria-labelledby="nav-home-tab">
                                    <table class="table">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>STT</th>
                                                <th>name</th>
                                                <th>vn_name</th>
                                                <th>description</th>
                                                <th>price</th>

                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each data.all_products.products}}
                                            <tr>

                                                <td scope="row">{{this.stt}}</td>
                                                <td scope="row">{{this.name}}</td>
                                                <td scope="row">{{this.vn_name}}</td>
                                                <td scope="row">{{this.description}}</td>
                                                <td scope="row">{{this.price}}</td>

                                                <td><a data-id="{{this._id}}" class="btn_restore_product" href=""
                                                        title="restore"><i class="far fa-window-restore "></i></a>
                                                </td>
                                                <td><a id="" onclick="delete_product('{{this._id}}')" data-toggle="modal"
                                                        title="delete" class="btn-force-delete"
                                                        data-target="#exampleModalLong" data-id="<%=data._id%>"
                                                        href=""><i style="color: red;" class="fas fa-trash-alt"></i></a>
                                                </td>
                                            </tr>
                                            {{/each}}

                                        </tbody>

                                    </table>
                                </div>
                                <div class="tab-pane fade" id="nav-category" role="tabpanel"
                                    aria-labelledby="nav-category-tab">
                                    <div class="col-lg-12">
                                        <table class="table" id="table-cat">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>#</th>
                                                    <th>ID</th>
                                                    <th>Tên tiếng anh</th>
                                                    <th>Tên tiếng việt</th>

                                                    <th></th>
                                                    <th></th>

                                                </tr>
                                            </thead>
                                            <tbody>

                                                {{#each data.all_categories.categories}}
                                                <tr>
                                                    <td scope="row">{{this.stt}}</td>
                                                    <td scope="row">{{this._id}}</td>
                                                    <td scope="row">{{this.ct_name}}</td>
                                                    <td scope="row">{{this.vn_ct_name}}</td>

                                                    <td><a data-id="{{this._id}}" class="btn_restore_category" href=""
                                                            title="restore"><i class="far fa-window-restore "></i></a>
                                                    </td>
                                                    <td><a id="" onclick="delete_category('{{this._id}}')" data-toggle="modal"
                                                            title="delete" class="btn-force-delete-cat"
                                                            data-target="#exampleModalLongCat" 
                                                            href=""><i style="color: red;"
                                                                class="fas fa-trash-alt"></i></a>
                                                    </td>
                                                </tr>
                                                {{/each}}

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="nav-blog" role="tabpanel" aria-labelledby="nav-blog-tab">
                                    <div class="col-lg-12">
                                        <table class="table" id="table-cat">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>#</th>

                                                    <th>Blogger_name</th>
                                                    <th>Content</th>

                                                    <th></th>
                                                    <th></th>

                                                </tr>
                                            </thead>
                                            <tbody>


                                                {{#each data.all_blogs.blogs}}
                                                <tr>
                                                    <td scope="row">{{this.stt}}</td>
                                                    <td scope="row">{{this.blogger_name}}</td>
                                                    <td scope="row">{{this.content}}</td>
                                                    <td><a data-id="{{this._id}}" class="btn_restore_blog" href=""
                                                            title="restore"><i class="far fa-window-restore "></i></a>
                                                    </td>
                                                    <td><a id="" onclick="delete_blog('{{this._id}}')" data-toggle="modal"
                                                            title="delete" class="btn-force-delete-blog"
                                                            data-target="#exampleModalLongBlog" data-id="<%=data._id%>"
                                                            href=""><i style="color: red;"
                                                                class="fas fa-trash-alt"></i></a>
                                                    </td>
                                                </tr>
                                                {{/each}}

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-1"></div>

                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

<!-- Modal products -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure? Do you want to delete this product?
            </div>
            <form action="/admin/trash/product?_method=DELETE" method="POST">
                <div class="modal-footer">
                    <button type="submit" id="btn_delete_product" name="id_delete_product" class="btn btn-primary">Delete</button>
                    <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>
            </form>
        </div>
    </div>
</div>
</div>

<!-- Modal category -->
<div class="modal fade" id="exampleModalLongCat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure? Do you want to delete this category?
            </div>
           <form name="delete-form" action="/admin/trash/category?_method=DELETE"  method="POST">
                <div class="modal-footer">
                    <button type="submit" id="btn_delete_category" name="id_delete_category" class="btn btn-primary">Delete</button>
                    <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>
            </form>
        </div>
    </div>
</div>
</div>

<!-- Modal blogs -->
<div class="modal fade" id="exampleModalLongBlog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete blog</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure? Do you want to delete this blog?
            </div>
            <div class="modal-footer">
                <form action="/admin/trash/blog?_method=DELETE" method="POST">
                    <button type="submit" name="id_delete_blog" id="btn_delete_blog" class="btn btn-primary">Delete</button>
                    <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>
<form name="form-restore-category" action="" method="POST"></form>
<form name="form-restore-product" action="" method="POST"></form>
<form name="form-restore-blog" action="" method="POST"></form>

<script>
    //restore product
    var btn_restore_product = document.getElementsByClassName("btn_restore_product")
    var restoreProductForm = document.forms["form-restore-category"]
    var idProduct
    var length_pr = btn_restore_product.length
    for (let i = 0; i < length_pr; i++) {
        idProduct = btn_restore_product[i].getAttribute("data-id")

        btn_restore_product[i].addEventListener("click", function (e) {
            e.preventDefault();
            restoreProductForm.action = '/admin/trash/product/' + idProduct + '?_method=PATCH';
            restoreProductForm.submit();
        })
    }
   // restore category
    var btn_restore_category = document.getElementsByClassName("btn_restore_category")
    var restoreCategoryForm = document.forms["form-restore-category"]
    var idCategory
    var length_ct = btn_restore_category.length
    for (let i = 0; i < length_ct; i++) {
        idCategory = btn_restore_category[i].getAttribute("data-id")

        btn_restore_category[i].addEventListener("click", function (e) {
            e.preventDefault();
            restoreCategoryForm.action = '/admin/trash/category/' + idCategory + '?_method=PATCH';
            restoreCategoryForm.submit();
        })
    }
   //resote blog
    var btn_restore_blog = document.getElementsByClassName("btn_restore_blog")
    var restoreBlogForm = document.forms["form-restore-blog"]
    var idBlog
    var length_bg = btn_restore_blog.length
    for (let i = 0; i < length_bg; i++) {
        idBlog = btn_restore_blog[i].getAttribute("data-id")

        btn_restore_blog[i].addEventListener("click", function (e) {
            e.preventDefault();
            restoreBlogForm.action = '/admin/trash/blog/' + idBlog + '?_method=PATCH';
            restoreBlogForm.submit();
        })
    }


function delete_product(_id){
        let btn_delete_pr  =document.getElementById("btn_delete_product");
        console.log(btn_delete_pr)
        btn_delete_pr.setAttribute("value",_id)
    }

function delete_category(_id){
        let btn_delete_ct  =document.getElementById("btn_delete_category");
        console.log(btn_delete_ct)
        btn_delete_ct.setAttribute("value",_id)
    }

function delete_blog(_id){
        let btn_delete_bg  =document.getElementById("btn_delete_blog");
        btn_delete_bg.setAttribute("value",_id)
    }

</script>